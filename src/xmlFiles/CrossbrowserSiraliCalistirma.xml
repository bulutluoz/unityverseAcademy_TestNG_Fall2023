<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="cross browser calistirma">

    <test name="chrome ile calisacak testler">
        <parameter name="browser" value="chrome"></parameter>

        <classes>
            <class name="tests.day13_CrossBrowserCalisacakTestler.C01_PozitifLoginTesti"></class>
            <class name="tests.day13_CrossBrowserCalisacakTestler.C02_NegatifLoginTesti"></class>
        </classes>

    </test>

    <test name="firefox ile calisacak testler">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="tests.day13_CrossBrowserCalisacakTestler.C01_PozitifLoginTesti"></class>
            <class name="tests.day13_CrossBrowserCalisacakTestler.C02_NegatifLoginTesti"></class>
        </classes>

    </test>



</suite>


